<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cht"
    android:layout_width="match_parent"

    android:background="@color/back"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"

    >


    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="16dp"
        android:layout_marginEnd="64dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tajwalmedium"

        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="18dp"
        android:text="الحمد لله بخالحمد لله بخير، كان عندي استشارة بخصوص مشروعي من فضلكيالحمد لله بخير، كان عندي استشارة بخصوص مشروعي من فضلكر، كان عندي استشارة بخصوص مشروعي من فضلك"
        android:textSize="15sp"
        app:angle="8dp"
        app:arrowCenter="true"


        app:arrowHeight="10dp"
        app:arrowLocation="right"
        app:arrowPosition="14dp"
        app:arrowWidth="8dp"
        app:bubbleColor="#EAEEF4"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="64dp"
        android:layout_marginEnd="16dp"


        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="18dp"

        android:text="الحمد لله بخالحمد لله بخي عنديعي من فضلك"

        android:textSize="15sp"
        app:angle="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tajwalmedium"
        app:arrowCenter="true"
        app:arrowHeight="10dp"
        app:arrowLocation="left"
        app:arrowPosition="14dp"
        app:arrowWidth="8dp"
        app:bubbleColor="@color/white"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/met"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/tajwalbold"
        android:text="2:01 PM"
        android:textColor="#AAB5BC"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/me"
        app:layout_constraintEnd_toEndOf="@+id/me" />

    <TextView
        android:id="@+id/yout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/tajwalbold"
        android:text="2:01 PM"
        android:textColor="#AAB5BC"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/you"
        app:layout_constraintEnd_toEndOf="@+id/you" />


</androidx.constraintlayout.widget.ConstraintLayout>